pipeline {
  agent any
  stages {
    stage('Test and Pause') {
      steps {
        // This command will now print the version, a message, and then wait for 30 seconds
        bat 'docker run --rm -v "%WORKSPACE%:/workspace" -w /workspace node:16-alpine sh -c "node --version && echo \'Container is now sleeping for 30 seconds...\' && sleep 30"'
      }
    }
  }
}
